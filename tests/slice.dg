include "common.dg"

fun[c] main() i32 {
    var arr = [0, 1, 2, 3, 4]

    puts(c"arr[:]") // expect: arr[:]
    printSlice(&arr[:]) // expect: 0, 1, 2, 3, 4

    puts(c"\narr[1:3]") // expect: arr[1:3]
    printSlice(&arr[1:3]) // expect: 1, 2

    puts(c"\narr[1:]") // expect: arr[1:]
    printSlice(&arr[1:]) // expect: 1, 2, 3, 4

    puts(c"\narr[:3]") // expect: arr[:3]
    printSlice(&arr[:3]) // expect: 0, 1, 2

    reverse(&var arr[:])

    puts(c"\nreverse arr[:]") // expect: reverse arr[:]
    printSlice(&arr[:]) // expect: 4, 3, 2, 1, 0

    puts(c"")

    return 0
}

fun printSlice(slice &[i32]) {
    for i = 0; i < lenof(slice); i++ {
        puti(slice[i])
        if (i+1) < lenof(slice) {
            putchar(0x2c)
            putchar(0x20)
        }
    }
}

fun reverse(slice &var [i32]) {
    for i = 0; i < lenof(slice)/2; i++ {
        val tmp = slice[i]
        val j = (lenof(slice)-1)-i
        slice[i] = slice[j]
        slice[j] = tmp
    }
}

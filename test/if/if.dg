include "../common.dg"

fun[c] main() i32 {
    if true {
        puts(c"true") // expect-output: true
    }

    if !false {
        puts(c"!false") // expect-output: !false
    }

    val a = true
    if a {
        puts(c"a") // expect-output: a
    }

    val b = false
    if !b {
        puts(c"!b") // expect-output: !b
    }

    val c = fun() bool {
        return true
    }

    if c() {
        puts(c"c") // expect-output: c
    }

    val d = fun() bool {
        return false
    }

    if !d() {
        puts(c"!d") // expect-output: !d
    }

    val foo = Foo{a: true, b: false}

    if foo.a {
        puts(c"foo.a") // expect-output: foo.a
    }

    if !foo.b {
        puts(c"!foo.b") // expect-output: !foo.b
    }

    val bar = [true, false]

    if bar[0] {
        puts(c"bar[0]") // expect-output: bar[0]
    }

    if !bar[1] {
        puts(c"!bar[1]") // expect-output: !bar[1]
    }

    return 0
}

struct Foo {
    a bool
    b bool
}
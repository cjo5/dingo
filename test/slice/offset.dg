include "../common.dg"

extern fun main() c_int {
    var arr = [0, 1, 2, 3, 4]

    putln("arr[:]") // expect-output: arr[:]
    printSlice(&arr[:]) // expect-output: 0, 1, 2, 3, 4

    putln("\narr[1:3]") // expect-output: arr[1:3]
    printSlice(&arr[1:3]) // expect-output: 1, 2

    putln("\narr[1:]") // expect-output: arr[1:]
    printSlice(&arr[1:]) // expect-output: 1, 2, 3, 4

    putln("\narr[:3]") // expect-output: arr[:3]
    printSlice(&arr[:3]) // expect-output: 0, 1, 2

    reverse(&var arr[:])

    putln("\nreverse arr[:]") // expect-output: reverse arr[:]
    printSlice(&arr[:]) // expect-output: 4, 3, 2, 1, 0

    putln("")

    return 0
}

fun printSlice(slice &[i32]) {
    for i = 0; i < len(slice); i++ {
        puti32(slice[i])
        if (i+1) < len(slice) {
            put(", ")
        }
    }
}

fun reverse(slice &var [i32]) {
    for i = 0; i < len(slice)/2; i++ {
        val tmp = slice[i]
        val j = (len(slice)-1)-i
        slice[i] = slice[j]
        slice[j] = tmp
    }
}

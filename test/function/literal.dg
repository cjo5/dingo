include "../common.dg"

extern fun main() c_int {
    val hello: extern fun() = extern fun() {
        println("Hello!")
    }

    hello() // expect: Hello!

    do_operation(5, 2, fun(arg1: i32, arg2: i32) i32 {
        return arg1 * arg2
    }) 
    // expect: 10

    bye() // expect: Good bye!

    return 0
}

val bye = fun() {
    println("Good bye!")
}

fun do_operation(arg1: i32, arg2: i32, op: fun(i32, i32) i32) {
    val res = op(arg1, arg2)
    printiln(res)
}
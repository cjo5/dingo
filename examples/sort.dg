extern fun main() C_int {
    var arr = [Int](31, 4, -10, 9, 2)

    sort(&var arr[:])
    print_data(&arr[:])

    return 0
}

fun swap(x: &var Int, y: &var Int) {
    val tmp = x[]
    x[] = y[]
    y[] = tmp
}

fun sort(data: &var [Int]) {
    for i: USize = 0; i < len(data)-1; i++ {
        for j: USize = 0; j < len(data)-1; j++ {
            if data[j] > data[j+1] {
                swap(&var data[j], &var data[j+1])
            }
        }
    }
}

fun print_data(data: &[Int]) {
    for i: USize = 0; i < len(data); i++ {
        io::printiln(data[i])
    }
}


include "libc.dg"

pub fun puti(i i32) {
    putiRec(abs(i), i < 0)
    putchar(10)
}

priv fun putiRec(i i32, sign bool) {
    if i < 10 {
        if sign {
            putchar(45)
        }
        putchar(48 + i)
        return
    }
    putiRec(i/10, sign)
    val digit = i % 10
    putchar(48 + digit)
}